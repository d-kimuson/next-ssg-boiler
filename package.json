{
  "name": "next-ssg-boiler",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:path": "pathpida --watch",
    "build": "pathpida && next build && next export",
    "start": "yarn build && http-server out -p 80",
    "typecheck": "tsc -p . --noEmit",
    "lint": "yarn typecheck && run-p lint:*",
    "lint:eslint": "eslint src --ext .ts,.tsx,.jsx",
    "lint:stylelint": "stylelint 'src/styles/**/*.{css,scss}'",
    "fix": "run-p fix:*",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:stylelint": "yarn lint:stylelint --fix",
    "fix:prettier": "prettier '**/*.{ts,tsx,js,jsx,json,css,scss}' --write",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "modern-css-reset": "^1.3.0",
    "next": "10.0.5",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.22.0",
    "http-server": "^0.12.3",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.11.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.2",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.18.0",
    "ts-jest": "^26.4.4",
    "tsc": "^1.20150623.0",
    "typescript": "^4.1.3"
  }
}
